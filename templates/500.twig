{% extends "base.twig" %}

{% block title %}Server error — 500{% endblock %}

{% block content %}
  <div class="profile-card card" style="text-align:center">
    <h1>500 — Server error</h1>
    <p>Sorry, an internal error occurred.</p>
    {% if error is defined %}
      <pre style="text-align:left; white-space: pre-wrap; margin: 1rem auto; max-width: 800px;">{{ error }}</pre>
    {% endif %}
    <p><a href="/">Return home</a></p>
  </div>
{% endblock %}
